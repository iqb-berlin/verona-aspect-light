{
  "name": "verona-aspect-light",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/iqb-berlin/verona-aspect-light"
  },
  "config": {
    "player_version": "0.0.1",
    "editor_version": "0.0.1",
    "unit_definition_version": "4.9.0"
  },
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "start-player-local": "ng serve player --port 4202",
    "test": "ng test",
    "lint": "ng lint"
  },
  "private": true,
  "eslintConfig": {
    "extends": "@iqb/eslint-config",
    "parserOptions": {
      "ignores": ["**/dist/*.*", "**/scripts/*.*", "**/test-data/*.*", "./dist/*", "./node_modules"],
      "project": "./tsconfig.json"
    },
    "ignorePatterns": ["**/dist/*.*", "**/scripts/*.*", "**/test-data/*.*", "./dist/**/*", "./node_modules/**/*"],
    "rules": {
      "function-call-argument-newline": "OFF",
      "@typescript-eslint/indent": [
        "error",
        2,
        {
          "SwitchCase": 1,
          "FunctionDeclaration": {
            "parameters": "first"
          },
          "FunctionExpression": {
            "parameters": "first"
          },
          "CallExpression": {
            "arguments": "first"
          }
        }
      ],
      "class-methods-use-this": [
        "error",
        {
          "exceptMethods": [
            "getElementComponent",
            "getNewOptionLabel",
            "transform"
          ]
        }
      ]
    },
    "overrides": [
      {
        "files": [
          "e2e-tests/**/*.ts"
        ],
        "rules": {
          "@typescript-eslint/no-unused-expressions": [
            "error",
            {
              "allowTaggedTemplates": true
            }
          ],
          "newline-per-chained-call": [
            "off"
          ]
        }
      }
    ]
  },
  "dependencies": {
    "@angular/animations": "^19.0.0",
    "@angular/cdk": "^19.0.0",
    "@angular/common": "^19.0.0",
    "@angular/compiler": "^19.0.0",
    "@angular/core": "^19.0.0",
    "@angular/forms": "^19.0.0",
    "@angular/material": "^19.0.0",
    "@angular/platform-browser": "^19.0.0",
    "@angular/platform-browser-dynamic": "^19.0.0",
    "@angular/router": "^19.0.0",
    "@angular/elements": "^19.1.6",
    "@iqb/responses": "^3.3.2",
    "rxjs": "^7.8.1",
    "tslib": "^2.6.2"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^19.0.2",
    "@angular-eslint/builder": "^19.0.0-alpha.4",
    "@angular-eslint/eslint-plugin": "^19.0.0-alpha.4",
    "@angular-eslint/eslint-plugin-template": "^19.0.0-alpha.4",
    "@angular-eslint/schematics": "^19.0.0-alpha.4",
    "@angular-eslint/template-parser": "^19.0.0-alpha.4",
    "@angular/cli": "~19.0.0",
    "@angular/compiler-cli": "^19.0.0",
    "@iqb/eslint-config": "^2.1.1",
    "@types/jasmine": "~5.1.4",
    "@types/katex": "^0.16.7",
    "@types/node": "^20.12.12",
    "cypress": "^13.17.0",
    "iqb-dev-components": "^1.4.1",
    "jasmine-core": "^5.1.2",
    "karma": "~6.4.3",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.1",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "^2.1.0",
    "karma-spec-reporter": "^0.0.36",
    "ts-node": "~9.0.0",
    "typescript": "~5.7.3"
  }
}
